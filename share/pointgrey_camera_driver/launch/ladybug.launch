<launch>
   <!-- Determine this using rosrun pointgrey_camera_driver list_cameras.
       If not specified, defaults to first camera found. -->
  <arg name="camera_serial" default="14422521" />
  <arg name="calibrated" default="0" />

  <group ns="camera">
    <node pkg="nodelet" type="nodelet" name="camera_nodelet_manager" args="manager" />

    <node pkg="nodelet" type="nodelet" name="camera_nodelet"
          args="load pointgrey_camera_driver/PointGreyLadybugNodelet camera_nodelet_manager" >
      <param name="frame_id" value="ladybug" />
      <param name="serial" value="$(arg camera_serial)" />

      <!-- When unspecified, the driver will use the default framerate as given by the
           camera itself. Use this parameter to override that value for cameras capable of
           other framerates. -->
      <param name="frame_rate" value="5" />
      <param name="ladybug_split_num" value="6" />
      <param name="format7_packet_size" value="32000" />
      <!-- Baidu hardware trigger frequency, frame_rate should match this. -->
      <param name="trigger_freq" value="5" />
      <!-- Timestamp mode: 0 - host time, 1 - Baidu HW trigger time. -->
      <param name="timestamp_mode" value="1" />
      <!-- Max shutter time in milli-seconds, 0: use default based on camera type. -->
      <param name="max_shutter_ms" value="0" />
      <!-- Build shutter time map (relative -> absolute) at runtime: 0 - no, use pre-built,
        1 - yes, build it at run time. -->
      <param name="build_shutter_map" value="0" />

      <!-- Use the camera_calibration package to create this file -->
      <param name="camera_info_url" if="$(arg calibrated)"
             value="file://$(env HOME)/.ros/camera_info/$(arg camera_serial).yaml" />
    </node>
  </group>
</launch>
